{
  "name": "drews-movie-dashboard",
  "version": "1.0.0",
  "description": "Static React app for searching and downloading movies via helper API",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "vite",
    "build:web": "vite build --mode web",
    "build:embedded": "vite build --mode embedded",
    "build": "npm run build:web && npm run build:embedded",
    "lint": "prettier --check .",
    "lint:fix": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist -b gh-pages",
    "start-server": "npm run build && tsx src/server/mcp-server.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "@types/node": "^24.7.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@vitejs/plugin-react": "^5.0.2",
    "autoprefixer": "^10.4.21",
    "gh-pages": "^6.3.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.13",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^7.1.4",
    "vite-plugin-singlefile": "^2.3.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.0",
